<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_marginEnd="16dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_cast_profile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_cast_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:fontFamily="@font/semi_bold"
        app:layout_constraintEnd_toEndOf="@+id/iv_cast_profile"
        app:layout_constraintStart_toStartOf="@+id/iv_cast_profile"
        app:layout_constraintTop_toBottomOf="@+id/iv_cast_profile" />

</androidx.constraintlayout.widget.ConstraintLayout>